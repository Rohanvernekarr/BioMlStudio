# Application
APP_NAME=BioMLStudio
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-in-production
API_VERSION=v1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bioml
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# MinIO/S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=miniosecret
MINIO_BUCKET_NAME=bioml-storage
MINIO_SECURE=false

# AWS S3 (alternative to MinIO)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# File Upload
MAX_UPLOAD_SIZE_MB=500
ALLOWED_FILE_EXTENSIONS=["csv","txt","fasta","fa","fastq","fq","json","xlsx"]
UPLOAD_CHUNK_SIZE=8192

# ML Settings
MODEL_STORAGE_PATH=models
MAX_TRAINING_TIME_SECONDS=7200
DEFAULT_TEST_SIZE=0.2
MAX_FEATURES=10000
N_JOBS=-1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
FROM_EMAIL=noreply@biomlstudio.com
